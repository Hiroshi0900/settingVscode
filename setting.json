{
    "editor.renderWhitespace": true, // スペースの表示
    "editor.insertSpaces": false, // デフォルト設定なのでなくてもOK
    "workbench.colorTheme": "Andromeda Colorizer",
    "workbench.iconTheme": "vscode-icons",
    "php-cs-fixer.executablePath": "${extensionPath}\\php-cs-fixer.phar",
    "php-cs-fixer.lastDownload": 1569370754319,
    "editor.formatOnSaveTimeout": 1250,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment.line", // 1行コメント
                "settings": {
                    //"foreground": "#eeeeee"
                    "foreground": "#ffa500"
                }
            },
            {
                "scope": "comment.block", /* ブロックコメント*/
                "settings": {
                    "foreground": "#ff2758"
                }
            }
        ]
    },
    "workbench.colorCustomizations": {
        "editor.background": "#000000"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.formatOnType": true,

    // デフォルトのコード整形を無効化
    "editor.formatOnSave": false,

    // ESLint 自動フォーマット有効化
    "eslint.autoFixOnSave": true,

    // ESLint の Vue.js 設定
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      {
        "language": "vue",
        "autoFix": true
      }
    ],
    // Prettier の ESLint 連携
    "prettier.eslintIntegration": true,
	"editor.detectIndentation": false,
	"auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "liquid",
        "ruby"
    ],
    "ruby.lint": {
        "reek": true,
        "rubocop": true,
        "ruby": true, //Runs ruby -wc
        "fasterer": true,
        "debride": true,
        "ruby-lint": true
    },
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    // "ruby.format": "rubocop",
    "ruby.useLanguageServer": true,
    "ruby.locate": {
        "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}",
        "include": "**/*.rb"
	},
	"emmet.includeLanguages": {
        "erb": "html"
	},
	"vsicons.dontShowNewVersionMessage": true
}